{
  "name": "ChojuTheme",
  "author": "Shopware AG",
  "views": [
     "@Storefront",
     "@Plugins",
     "@ChojuTheme"
  ],
  "style": [
    "app/storefront/src/scss/overrides.scss",
    "@Storefront",
    "app/storefront/src/scss/base.scss"
  ],
  "script": [
    "@Storefront",
    "app/storefront/dist/storefront/js/choju-theme.js"
  ],
  "asset": [
    "@Storefront",
    "app/storefront/src/assets"
  ],
  "config": {
    "blocks": {
      "footer": {
        "label": {
          "en-GB": "Footer",
          "de-DE": "Footer"
        }
      }
    },
    "fields": {
      "sw-color-brand-primary": {
        "value": "#00102D"
      },
      "sw-color-brand-secondary": {
        "value": "#E49D92"
      },
      "sw-border-color": {
        "value": "#00102D"
      },
      "sw-font-family-base": {
        "value": "'Jost', sans-serif"
      },
      "sw-text-color": {
        "value": "#00102D"
      },
      "sw-font-family-headline": {
        "value": "'adobe-garamond-pro', serif"
      },
      "sw-headline-color": {
        "value": "#00102D"
      },
      "sw-color-price": {
        "value": "#00102D"
      },
      "sw-color-buy-button": {
        "value": "#00102D"
      },
      "sw-logo-desktop": {
        "value": "app/storefront/dist/assets/logo/choju-logo-white.svg"
      },
      "sw-logo-tablet": {
        "value": "app/storefront/dist/assets/logo/choju-logo-white.svg"
      },
      "sw-logo-mobile": {
        "value": "app/storefront/dist/assets/logo/choju-logo-white.svg"
      },
      "sw-footer-logo": {
        "label": {
          "en-GB": "Footer logo",
          "de-DE": "Footer logo"
        },
        "type": "media",
        "value": "app/storefront/dist/assets/logo/choju-logo-long.svg",
        "editable": true,
        "block": "footer",
        "order": 100
      },
      "sw-footer-bg": {
        "label": {
          "en-GB": "Footer background img",
          "de-DE": "Footer background img"
        },
        "type": "media",
        "value": "app/storefront/dist/assets/media/footer-bg.svg",
        "editable": true,
        "block": "footer",
        "order": 200
      }
    }
  }
}