        class="sw-cms-padding-config__checkbox"
        for="sw-cms-section-padding-left-config-mobile"
      >
        {{ $tc('sw-cms.detail.label.paddingMobile') }}

        <input
          id="sw-cms-section-padding-left-config-mobile"
          class="sw-cms-padding-config__checkbox-input"
          type="checkbox"
          {% if VUE3 %}
          v-model:value="section.customFields.paddingLeftMobile"
          {% else %}
          v-model="section.customFields.paddingLeftMobile"
          {% endif %}
        >

        <sw-icon
          :name="section.customFields.paddingLeftMobile ? 'regular-mobile' : 'regular-mobile-slash'"
          size="24"
